<article>
  <header>
    <h1>Movies</h1>
  </header>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Results</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @list_of_movies.each do |a_movie| %>
      <tr>
        <td><%= a_movie.title %></td>
        <td><%= a_movie.year %></td>
        <td><%= a_movie.result %></td>
        <td>
